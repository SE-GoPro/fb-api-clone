{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "prefer-destructuring": 1,
    "arrow-parens": 0,
    "no-shadow": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "global-require": 0,
  }
}